    "resolveJsonModule": true,
    "outDir": "../dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../"
    }
  ]
}
